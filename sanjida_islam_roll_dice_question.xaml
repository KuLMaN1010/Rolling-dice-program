<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exam_question.MainPage" >

    <VerticalStackLayout>
        <Label 
                Text="Home"
                FontSize="24"
                HorizontalOptions="Center" />

        <Border Stroke="Gray" StrokeThickness="3" Padding="10" BackgroundColor="White" HeightRequest="150" WidthRequest="150" Margin="30">
            <Label x:Name="DiceLabel" 
                       Text=" "
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
        </Border>

        <Button Text="Roll Dice"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Clicked="OnRollDiceClicked"/>
        </VerticalStackLayout>

 </ContentPage>